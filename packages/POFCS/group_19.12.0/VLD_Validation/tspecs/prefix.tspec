           {"VALUE_CHECK_TYPE":"52","ALLOW_SPACE":"Y","CHECK_PATTERN":"NoQoS"}, 
           {"SERVICE_ID":'000007', "DATA_NAME":"GTP_PGW_OUT", "STRUCTURE_CD":"1", "FIELD_NAME":"RuleBaseName"})

